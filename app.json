{
  "expo": {
    "name": "REV Delivery",
    "slug": "shopify-react-native-template",
    "version": "1.1.1",
    "orientation": "portrait",
    "icon": "./src/assets/icon.png",
    "userInterfaceStyle": "light",
    "splash": {
      "image": "./src/assets/splash.png",
      "resizeMode": "contain",
      "backgroundColor": "#FFFFFF"
    },
    "assetBundlePatterns": [
      "**/*"
    ],
    "ios": {
      "supportsTablet": false,
      "bundleIdentifier": "com.sfkunal.shopifyreactnativetemplate",
      "buildNumber": "43",
      "infoPlist": {
        "NSCameraUsageDescription": "This app uses the camera to enable users to scan their credit card for quicker entry",
        "NSApplePayUsageDescription": "This app integrates Apple Pay for quicker checkout",
        "NSAppTransportSecurity": {
          "NSAllowsArbitraryLoads": true
        }
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./src/assets/icon.png",
        "backgroundColor": "#FFFFFF"
      }
    },
    "web": {
      "favicon": "./src/assets/favicon.png"
    },
    "updates": {
      "url": "https://u.expo.dev/d36086a4-c412-4717-904e-3841f6a42d78"
    },
    "plugins": [
      [
        "expo-build-properties",
        {
          "ios": {
            "deploymentTarget": "17.0"
          }
        }
      ],
      [
        "@stripe/stripe-react-native",
        {
          "merchantIdentifier": "merchant.mobile.rev",
          "enableGooglePay": true
        }
      ]
    ],
    "extra": {
      "eas": {
        "projectId": "d36086a4-c412-4717-904e-3841f6a42d78"
      }
    },
    "runtimeVersion": {
      "policy": "sdkVersion"
    },
    "scheme": "revdelivery"
  }
}